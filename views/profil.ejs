<%- include('layout/header', {user: user}); %>
<div class="row">
    <div class="col-9">
        <h2>Mon profil</h2>
    </div>
    <div class="col-3">
        <button id="change_password" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Changer de
            mot de passe</button>
    </div>
</div>
<br>
<hr><br>
<form action="/profil/update_profil" method="POST" encType="multipart/form-data">
    <div class="form-group">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-8">
                <h4>Photo de profil</h4><br>
            </div>
            <div class="col-3">
                <div id="file" class="btn btn-sm btn-success">
                    Nouvelle photo de profil
                    <input type="file" accept="image/png, image/jpeg" name="photo" onchange="loadFile(event)"/>
                </div>
            </div>
        </div>
        <%if (user.image) { %>
            <div class="row ml-3">
                <div class="col">
                    <img class="shadow-sm p-3 mb-5 rounded" id="profil_pic" src=<%="images/profiles/" + user.image %>>
                </div>
                <div class="col-8">
                </div>
            </div>
            <% } %>
    </div>
    <div class="form-group">
        <label for="username">
            <h4>Identifiant</h4>
        </label>
        <input type="text" class="form-control ml-3" name="username" value=<%=user.username %>>
    </div>
    <div class="form-group">
        <label for="email">
            <h4>Email</h4>
        </label>
        <input type="text" class="form-control ml-3" name="email" value=<%=user.email %>>
    </div>
    <div class="form-group">
        <label for="bio">
            <h4>Bio</h4>
        </label>
        <textarea class="form-control ml-3" name="bio" rows="5"><%=user.bio %></textarea>
        <small id="emailHelp" class="form-text text-muted ml-3">Dites en un peu plus sur vous.</small>
    </div>
    <button type="submit" class="btn btn-primary ml-3">Sauvegarder</button>
</form>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Changer de mot de passe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ancien mot de passe</label>
                        <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Nouveau mot de passe</label>
                        <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Répétez le nouveau mot de passe</label>
                        <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary">Modifier</button>
            </div>
        </div>
    </div>
</div>
<script src='/javascripts/profile.js'></script>
<%- include('layout/footer', {user: user}); %>